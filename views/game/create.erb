<% if authorized? %>
<div class="row" style="padding-top: 5%">
    <form id="form-create-game" class="form-horizontal col-md-8 col-md-offset-2" action="/game/create" method="post" style="background-color:pink; padding:3%">
      <div class="form-group">
        <label for="size" class="col-sm-2 control-label">Table size</label>
        <div class="col-sm-10" data-bind ="with: sizeModel">
        <p>
          <input type="hidden" name="user_id" value="<%= arg(0) %>"/>
            <select data-bind="options: Sizes,
                   optionsText: 'sizeText',
                   value: selectedSize,
                   optionsCaption: 'Choose...',
                   selectedOptions: selectedSize" name="select_size"></select>
              <div data-bind="foreach: selectedSize">
                <span data-bind="text: countShips">
                </span>
                barcos.
              </div>
        </p>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10 btn-group">
          <button id="bSubmit" type="button" class="btn btn-primary">Play</button>
        </div>
      </div>
    </form>
</div>
<script>
$(document).ready(function(){
    $("#bSubmit").click(function(){
        $("#form-create-game").attr("action", "/game/create")
        $("#form-create-game").validate();
        $("#form-create-game").submit();
    });
});
</script>

<% end %>

